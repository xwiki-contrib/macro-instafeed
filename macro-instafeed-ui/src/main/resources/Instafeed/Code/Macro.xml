    <property>
      <code>require.config({
  paths: {
    'instafeed': '$escapetool.javascript($xwiki.getURL("Instafeed.Code.InstafeedIntegration", "jsx", "r=1"))'
  }
});
require(['jquery', 'instafeed'], function($, Instafeed) {
  'use strict';
  $(document).ready(function () {
    $('.myInstaFeed').each(function (index) {
      var id = 'myInstaFeed_' + index;
      $(this).attr('id', id);
      var size = $(this).data('size');
      var resolution = 'thumbnail';
      var feed = new Instafeed({
          get: 'user',
          userId: 'self',
          accessToken: $(this).data('accesstoken'),
          target: id,
          limit: $(this).data('maxcount'),
          resolution: resolution
      });
      feed.run();
    });
  });
});</code>
